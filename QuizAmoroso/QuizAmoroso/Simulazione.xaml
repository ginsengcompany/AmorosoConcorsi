<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizAmoroso.Simulazione"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.BackgroundColor>
        <OnPlatform x:TypeArguments="Color" Android="LightCyan" iOS="LightCyan" WinPhone="White"/>
    </ContentPage.BackgroundColor>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <StackLayout VerticalOptions="Start" x:Name="LayoutPrincipalePaginaSimulazione">
                    <Frame>
                        <Frame.BackgroundColor>
                            <OnPlatform x:TypeArguments="Color" WinPhone="White" Android="#2196f3" iOS="#2196f3"/>
                        </Frame.BackgroundColor>
                        <StackLayout>
                            <StackLayout Orientation="Horizontal">

                                <Image x:Name="TornaAlleModalita"  
                                   Source="arrow_back_white.png"
                                   HeightRequest="26">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TornaAlleModalita_Clicked"/>
                                    </Image.GestureRecognizers>
                                </Image>

                                <Label x:Name="LabelTitoloHeader"
                                       YAlign="Center"
                                       XAlign="Center"
                                       FontSize="Medium"
                                       FontAttributes="Bold">
                                    <Label.TextColor>
                                        <OnPlatform x:TypeArguments="Color" WinPhone="#f30100" Android="White" iOS="White"/>
                                    </Label.TextColor>
                                </Label>
                                <StackLayout HorizontalOptions="CenterAndExpand"></StackLayout>
                                <StackLayout HorizontalOptions="EndAndExpand">
                                    <Button x:Name="btn_ApriPDF"
                                            BackgroundColor="#0069c0"
                                            HorizontalOptions="End"
                                            Text="Leggi i Brani"
                                            FontSize="Small"
                                            TextColor="White"
                                            IsEnabled="False"
                                            IsVisible="False"
                                            Clicked="btn_ApriPDF_Clicked">
                                    </Button>
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <StackLayout VerticalOptions="Start">
                    <Frame x:Name="frameDomanda"
                           IsVisible="False"
                           HasShadow="True">
                        <Label x:Name="lblDomanda"
                               FontSize="Medium"
                               FontAttributes="Bold">
                            <Label.TextColor>
                                <OnPlatform x:TypeArguments="Color" WinPhone="Black"/>
                            </Label.TextColor>
                        </Label>
                    </Frame>
                    
                    <Image x:Name="immagine"
                           IsVisible="False"/>
                    
                    <Button x:Name="btnA"
                            Clicked="btnA_Clicked"
                            Style="{StaticResource buttonStyle}"/>
                    <Button x:Name="btnB" 
                            Clicked="btnB_Clicked"
                            Style="{StaticResource buttonStyle}"/>
                    <Button x:Name="btnC"
                            Clicked="btnC_Clicked"
                            Style="{StaticResource buttonStyle}"/>
                    <Button x:Name="btnD" 
                            Clicked="btnD_Clicked"
                            Style="{StaticResource buttonStyle}"/>
                    
                    <StackLayout Orientation="Horizontal">
                    <Button x:Name="saltaDomanda"
                            BackgroundColor="LawnGreen"
                            HorizontalOptions="StartAndExpand"
                            Text="Salta Domanda"
                            TextColor="White"
                            IsEnabled="False"
                            IsVisible="False"
                            Clicked="saltaDomanda_Clicked"/>
                        <Button x:Name="consegnaSimulazione"
                            BackgroundColor="PaleVioletRed"
                            HorizontalOptions="End"
                            Text="Consegna"
                            TextColor="White"
                            IsEnabled="False"
                            IsVisible="False"
                            Clicked="consegnaSimulazione_Clicked"/>
                    </StackLayout>
                    
                    <Label x:Name="lblTempo"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="Red"
                           FontAttributes="Bold"
                           FontSize="35"/>
                    
                    <ActivityIndicator x:Name="CaricamentoPaginaSimulazione"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Color="#2196f3"/>
                </StackLayout>

                <RelativeLayout x:Name="RelativeBottoneAvvio">
                    <Button x:Name="avvioQuiz"
                        TextColor="White"
                        Clicked="avvioQuiz_Clicked"
                        BackgroundColor="#0069c0"
                        Text="Avvia"
                        FontSize="30"                 
                        RelativeLayout.XConstraint="
                        {
                        ConstraintExpression Type = RelativeToParent,
                        Factor = 0.15,
                        Constant = 0,
                        Property = Width
                        }"
                        RelativeLayout.YConstraint="
                        {
                        ConstraintExpression Type = RelativeToParent,
                        Factor = 0.35,
                        Constant = 0,
                        Property = Height
                        }"
                        RelativeLayout.WidthConstraint="
                        {
                        ConstraintExpression Type = RelativeToParent,
                        Factor = 0.7,
                        Constant = 0,
                        Property = Width
                        }"
                        RelativeLayout.HeightConstraint="
                        {
                        ConstraintExpression Type = RelativeToParent,
                        Factor = 0.3,
                        Constant = 0,
                        Property = Height
                        }"/>
                </RelativeLayout>

                    <StackLayout VerticalOptions="CenterAndExpand"></StackLayout>
                <StackLayout VerticalOptions="End" x:Name="FooterContatoreDomande">
                    <StackLayout HorizontalOptions="StartAndExpand">
                    </StackLayout>
                    <Frame>
                        <Frame.BackgroundColor>
                            <OnPlatform x:TypeArguments="Color" WinPhone="White" Android="#2196f3" iOS="#2196f3"/>
                        </Frame.BackgroundColor>
                        <StackLayout Orientation="Horizontal">
                            <Label x:Name="ContatoreDomande"
                                   YAlign="End"
                                   FontAttributes="Italic">
                                <Label.TextColor>
                                    <OnPlatform x:TypeArguments="Color" WinPhone="#f30100" Android="White" iOS="White"/>
                                </Label.TextColor>
                            </Label>
                        </StackLayout>
                    </Frame>
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>